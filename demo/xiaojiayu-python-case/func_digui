#example1

def factorial(n):
    result = n
    for i in range(1,n):
        result *= i
    return result

number = int(input('请输入一个数：'))
result = factorial(number)
print('%d的阶乘是：%d' %(number,result))


#example2

def factorial(n):
    if n == 1:
        return 1
    else:
        return n * factorial(n-1)

number = int(input('请输入一个数：'))
result = factorial(number)
print('%d的阶乘是：%d' %(number,result))
